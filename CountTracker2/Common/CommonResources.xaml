<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:CountTracker2.Common">

    <!--  Application-specific resources  -->
    <x:String x:Key="AppName">Count 'n Save everything</x:String>
    <vm:ViewModelLocator xmlns:vm="using:CountTracker2.ViewModel" x:Key="Locator" />

    <Style x:Key="PageBackground" TargetType="Grid">
        <Setter Property="Background" Value="YellowGreen" />
    </Style>

    <Style x:Key="BottomAppbarStyle" TargetType="CommandBar">
        <Setter Property="Background" Value="#FF4DE82B" />
        <Setter Property="BorderBrush" Value="{x:Null}" />
    </Style>

    <Style x:Key="FlyoutButton" TargetType="Button">
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="20,20,20,20" />
    </Style>

</ResourceDictionary>
